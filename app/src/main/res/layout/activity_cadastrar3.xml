<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/bibliotecas"
    android:layout_height="match_parent"
    tools:context=".Activity.log2Activity">



    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:text="Universidade Federal de Itajubá"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtNomeLivro"
        android:textAlignment="center"
        android:hint="Nome do Livro"
        android:inputType="text"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtEditora"
        android:hint="Editora"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtAnoLivro"
        android:hint="Ano do Livro"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtEdicao"
        android:hint="Edição"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtQtdd"
        android:hint="Quantidade"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtCreditos"
        android:hint="Créditos"
        android:textColor="#FFFFFF"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        />



    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Unifei Copyright"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />




</LinearLayout>