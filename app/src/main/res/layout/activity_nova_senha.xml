<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/bibliotecas"
    android:layout_height="match_parent"
    tools:context=".Activity.log2Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/unifei"
        android:layout_marginBottom="50dp"
        />



    <EditText
        android:layout_width="match_parent"
        android:id="@+id/novasenha"
        android:textAlignment="center"
        android:hint="Nova Senha"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/cfrSenha"
        android:hint="Confirma Senha"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnMs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muda Senha" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Unifei Copyright"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />




</LinearLayout>